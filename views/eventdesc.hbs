<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="../eventdesc.css">
    <link rel="stylesheet" href="../jqueryui/jquery-ui.css">
    <link rel="stylesheet" href="../jqueryui/jquery-ui.structure.css">
    <link rel="stylesheet" href="../jqueryui/jquery-ui.theme.css">
    <title>Event Description</title>
</head>
<body>
    
    <nav>
       
         <h4 id="name-user">WELCOME</h4>
        
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a id="logout">Log out</a></li>
        </ul>
    </nav>

    <div class="Cards">
        <div class="speakerscard" style="overflow-y: scroll;overflow-x:hidden;display: inline;border: 1px solid black;">
        {{#if result}}
        {{#each result as |object|}}
            <script>
                console.log("{{object.S_name}}");
            if(localStorage.getItem("Timeadded")!=null){
                var timeadded=localStorage.getItem("Timeadded");
                 var timeadded = parseInt(timeadded);}
                var objecttime=parseInt({{object.E_timeadded}});
            if(objecttime==timeadded){
                console.log("true");
            document.write('<div class="addedspeakerscard">');
            document.write('<h4 id="removespeaker{{@index}}" style="cursor: pointer;display:inline;float: right; transform:rotate(45deg);margin-right:10px;z-index:10;" class="removespeaker">+</h4>');
            document.write('<h3 style="margin-left:10px;">{{object.S_name}}({{object.S_Prof}})</h3>');
            document.write('<h6>{{object.S_topic}}</h6>');
                
            document.write('</div>');
            }
            
            </script>
        {{/each}}
        {{/if}}
        </div>
        
        <div class="guestscard" style="overflow-y: scroll;overflow-x:hidden;display: inline;border: 1px solid black;">
        {{#if result1}}
        {{#each result1 as |object|}}
        <script>
            if(localStorage.getItem("Timeadded")!=null){
                var timeadded=localStorage.getItem("Timeadded");
                var timeadded = parseInt(timeadded);}
                var objecttime=parseInt({{object.E_timeadded}});
            if( objecttime == timeadded){
                
            document.write('<div class="addedguestscard">');
            document.write('<h4 id="removeguest{{@index}}" style="cursor: pointer;display:inline;float: right; transform:rotate(45deg);margin-right:10px;z-index:10;" class="removeguest">+</h4>');
            document.write('<h3 style="margin-left:10px;">{{object.g_name}}({{object.g_gender}})</h3>');
            document.write('<h6>{{object.g_phno}}</h6>');
                
            document.write('</div>');
            
            }
        </script>
        {{/each}}
        {{/if}}
        </div>
        <div class="bg-modal-addspeakers">
        <div class="modal-content-addspeakers">
            <div class="closeaddspeakers">
                +
            </div>
            <form onsubmit="return validateaddspeaker()" action="/auth/addspeaker" method="POST">
                <script>
                    if(localStorage.getItem("Timeadded")!=null){
                        var timeadded=localStorage.getItem("Timeadded");
                        document.write('<input type="hidden" name="timeadded" style="display: none;" id="eventtimeadded">');
                        document.getElementById("eventtimeadded").value =timeadded;
                    }
                </script>
                <div class="wrap-input validate-input" style="margin-top: 10%;" data-validate="Enter valid number">
                    <input id="addspeakername" type="text" class="input" name="speaker_name">  
                    <span class="focus-input" data-placeholder="Name"></span>   
                </div>
                <div class="wrap-input validate-input" data-validate="Enter valid topic">    
                     <input id="addspeakertopic" type="text" class="input" name="speaker_topic">  
                    <span class="focus-input" data-placeholder="Topic"></span>  
                </div>
                <div class="wrap-input validate-input" data-validate="Enter valid profession">    
                    <input id="addspeakerprofession" type="text" class="input" name="speaker_profession">  
                    <span class="focus-input" data-placeholder="Profession"></span> 
                </div>
                
                <button class="btn addspeakersubmit-btn">Add</button>
            </form>

        </div>
    </div>    

    <div class="bg-modal-addguests">
        <div class="modal-content-addspeakers">
            <div class="closeaddguests">
                +
            </div>
            <form onsubmit="return validateaddguests()" action="/auth/addguest" method="POST">
                <script>
                    if(localStorage.getItem("Timeadded")!=null){
                        var timeadded=localStorage.getItem("Timeadded");
                        document.write('<input type="hidden" name="timeadded" style="display: none;" id="eventguesttimeadded">');
                        document.getElementById("eventguesttimeadded").value =timeadded;
                    }
                </script>
                <div class="wrap-input validate-input" style="margin-top: 10%;" data-validate="Enter valid number">
                    <input id="addguestname" type="text" class="input" name="guest_name">  
                    <span class="focus-input" data-placeholder="Name"></span>   
                </div>
                <div class="wrap-input validate-input" data-validate="Enter valid phno">    
                     <input id="addguestphno" type="number" class="input" name="guest_phno">  
                    <span class="focus-input" data-placeholder="Phno"></span>  
                </div>
                <div class="wrap-input validate-input" data-validate="Enter valid profession">    
                    <input id="addguestgender" type="text" class="input" name="guest_gender">  
                    <span class="focus-input" data-placeholder="Gender"></span> 
                </div>
                
                <button class="btn addspeakersubmit-btn">Add</button>
            </form>

        </div>
    </div>   

        <button class="btn addspeakerbutton" id="addspeakerbutton">Add Speaker</button>
        <butoon class="btn addguestbutton" id="addguestbutton">Add guest</butoon>
    </div>
















</body>
